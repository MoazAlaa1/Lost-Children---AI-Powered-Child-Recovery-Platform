@inject UserManager<ApplicationUser> _userManager

<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>LostChildren Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Admin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Admin/assets/css/demo_1/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Admin/assets/images/favicon.png" />
    @RenderSection("Styles",false)
</head>
<body>
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
            <a class="navbar-brand brand-logo" href="index.html"><img src="~/Admin/assets/images/logo.svg" alt="logo" /></a>
            <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/Admin/assets/images/logo-mini.svg" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                <span class="mdi mdi-menu"></span>
            </button>
            
            <ul class="navbar-nav navbar-nav-right">
                <li class="nav-item nav-profile dropdown">
                    <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="nav-profile-img">
                            <img src="~/Admin/assets/images/faces/face1.jpg" alt="image">
                            <span class="availability-status online"></span>
                        </div>
                        <div class="nav-profile-text">
                            <p class="mb-1 text-black">
                                 @{ 
                                     var user = await _userManager.GetUserAsync(User); 

                                 } 
                                 @user.FirstName @user.LastName 
                            </p>
                        </div>
                    </a>
                    <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/User/LogOut" >
                            <i class="mdi mdi-logout me-2 text-primary"></i> LogOut
                        </a>
                    </div>
                </li>
                <li class="nav-item d-none d-lg-block full-screen-link">
                    <a class="nav-link">
                        <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                    </a>
                </li>
               
                
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                <span class="mdi mdi-menu"></span>
            </button>
        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">

        <div class="theme-setting-wrapper">
            <div id="theme-settings" class="settings-panel">
                <i class="settings-close mdi mdi-close"></i>
                <p class="settings-heading">SIDEBAR SKINS</p>
                <div class="sidebar-bg-options selected" id="sidebar-light-theme">
                    <div class="img-ss rounded-circle bg-light border me-3"></div>Light
                </div>
                <div class="sidebar-bg-options" id="sidebar-dark-theme">
                    <div class="img-ss rounded-circle bg-dark border me-3"></div>Dark
                </div>
                <p class="settings-heading mt-2">HEADER SKINS</p>
                <div class="color-tiles mx-0 px-4">
                    <div class="tiles success"></div>
                    <div class="tiles warning"></div>
                    <div class="tiles danger"></div>
                    <div class="tiles info"></div>
                    <div class="tiles dark"></div>
                    <div class="tiles default"></div>
                </div>
            </div>
            <div id="layout-settings" class="settings-panel">
                <i class="settings-close mdi mdi-close"></i>
                <div class="d-flex align-items-center justify-content-between border-bottom">
                    <p class="settings-heading font-weight-bold border-top-0 mb-3 ps-3 pt-0 border-bottom-0 pb-0">Template Demos </p>
                </div>
                <div class="demo-screen-wrapper">
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-default-light/index.html" class="demo-thumb-image" id="theme-light-switch">
                        <img src="~/Admin/assets/images/demo/vertical-default.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-default-dark/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/vertical-dark.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/horizontal-default-light/index.html" class="demo-thumb-image" id="theme-dark-switch">
                        <img src="~/Admin/assets/images/demo/horizontal-menu-light.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/horizontal-default-dark/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/horizontal-menu-dark.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-dark-sidebar/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/dark-sidebar.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-boxed/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/boxed-layout.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-icon-menu/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/icon-menu.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-compact/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/compact-menu.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-fixed/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/fixed-menu.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-hidden-toggle/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/toggle-menu.png" alt="demo image">
                    </a>
                    <a href="https://www.bootstrapdash.com/demo/majestic-admin-pro/template/demo/vertical-toggle-overlay/index.html" class="demo-thumb-image">
                        <img src="~/Admin/assets/images/demo/toggle-overlay-menu.png" alt="demo image">
                    </a>
                </div>
            </div>
        </div>
        
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item nav-profile">
                    <a href="#" class="nav-link">
                        <div class="nav-profile-image">
                            <img src="~/Admin/assets/images/faces/face1.jpg" alt="profile">
                            <span class="login-status online"></span>
                            <!--change to offline or busy as needed-->
                        </div>
                        <div class="nav-profile-text d-flex flex-column">
                            <span class="font-weight-bold mb-2">
                                (@user.FirstName @user.LastName)
                                </span>
                            <span class="text-secondary text-small">Admin</span>
                        </div>
                        <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <span class="menu-title">Dashboard</span>
                        <i class="mdi mdi-home menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="MissingChildren" asp-action="List" >
                        <span class="menu-title">Missing Children</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="Search" asp-action="SearchForm" >
                        <span class="menu-title">Search on Lost Child</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="FoundedChildren" asp-action="List" >
                        <span class="menu-title">Founded Children</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="Sections" asp-action="List" >
                        <span class="menu-title">About Sections</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="WorkSteps" asp-action="List" >
                        <span class="menu-title">Work Steps</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="KPI" asp-action="List" >
                        <span class="menu-title">KPIs</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="FAQ" asp-action="List" >
                        <span class="menu-title">FAQ</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-area="Admin" asp-controller="Slider" asp-action="Edit" >
                        <span class="menu-title">Slider</span>
                        <i class="menu-arrow"></i>
                        <i class="mdi mdi-apps menu-icon"></i>
                    </a>
                </li>
                
            </ul>
        </nav>
        <!-- partial -->
        <div class="main-panel">
            @RenderBody()
   

            <footer class="footer">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2021 <a href="https://www.bootstrapdash.com/" target="_blank">BootstrapDash</a>. All rights reserved.</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
                </div>
            </footer>
        <div>
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
    </div>
    <!-- partial:partials/_footer.html -->
    
    <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Admin/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Admin/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Admin/assets/js/off-canvas.js"></script>
    <script src="~/Admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/Admin/assets/js/misc.js"></script>
    <script src="~/Admin/assets/js/settings.js"></script>
    <script src="~/Admin/assets/js/todolist.js"></script>
    <script src="~/Admin/assets/js/jquery.cookie.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/Admin/assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->
    @RenderSection("Scripts",false)
</body>
</html>
