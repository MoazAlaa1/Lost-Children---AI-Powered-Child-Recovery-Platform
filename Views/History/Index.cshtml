@model List<ViewHistory>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .history-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 50%;
    }

    .action-btns .btn {
        margin: 0 3px;
        padding: 5px 10px;
    }

    .table thead th {
        background-color: #343a40;
        color: white;
        position: sticky;
        top: 0;
    }
    @@media (max-width: 768px) {
        .history-container

    {
        padding: 1rem;
        margin: 1rem;
    }

    .table img {
        width: 40px;
        height: 40px;
    }

    .action-btns .btn {
        margin: 2px;
        padding: 3px 6px;
        font-size: 12px;
    }

    }
    @@media (max-width: 576px) {
        .table td, .table th

    {
        padding: 0.5rem;
        font-size: 14px;
    }

    .action-btns {
        display: flex;
        flex-direction: column;
    }

        .action-btns .btn {
            margin: 2px 0;
        }

    }
</style>
<div class="container-fluid">
    <div class="history-container">
        <h2 class="mb-4 text-center">History Records</h2>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Child Image</th>
                        <th>Child Name</th>
                        <th>Search Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for(int i=0; i < Model.Count;i++) 
                    {
                        <!-- Sample Row 1 -->
                        <tr>
                            <td>@(i+1)</td>
                            <td>
                                <img src="@Model[i].LostChildrenImage" alt="User Image" class="img-thumbnail">
                            </td>
                            <td>@Model[i].LostChildrenName</td>
                            <td>@Model[i].CreatedDate</td>
                            <td class="action-btns">
                                <a class="btn btn-primary btn-sm" asp-controller="History" asp-action="HistoryDetails" asp-route-id="@Model[i].ResultId">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a class="btn btn-danger btn-sm" asp-controller="History" asp-action="Delete" asp-route-id="@Model[i].ResultId">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                    

                    
                </tbody>
            </table>
        </div>

        
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}